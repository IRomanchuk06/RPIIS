\\Исполняемая программа
#include <iostream>
#include <vector>
#include "C:\Users\Kostya\source\repos\лаба 2 пивас\Header.h\Header.h.cpp"

using namespace std;
using namespace SetLib;

int main() {
    setlocale(LC_ALL, "rus");

    vector<char> set = CreateSets();
    permute(set,0,set.size()-1);

    return 0;
}
